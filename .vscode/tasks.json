{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "create bin folder for active file",
            "command": "mkdir",
            "args": [
                "-p",
                "${workspaceFolder}/bin/${relativeFileDirname}"
            ],
            "windows": {
                "args": [
                    "${workspaceFolder}/bin/${relativeFileDirname}"
                ]
            },
            "group": "none"
        },
        {
            "type": "shell",
            "label": "Mac: build active c/c++ file to /bin/ folder",
            "dependsOn": [
                "create bin folder for active file"
            ],
            "command": "/usr/bin/clang++",
            "args": [
                "-std=c++17",
                "-stdlib=libc++",
                "-I",
                "${workspaceFolder}/lib",
                "-g",
                "${file}",
                "-o",
                "${workspaceFolder}/bin/${relativeFileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group":{
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}